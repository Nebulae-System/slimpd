<div class="{{ type }}s_container">
	
	{% if itemlist|length  %}
	<div class="container-fluid">
	
	  {% set itemsPerColumn = (itemlist|length / 4)|round(0, 'ceil') %}
	
	  {% for item in itemlist %}
	
	    {% if itemsPerColumn == 1 or loop.index % itemsPerColumn == 1 -%}
	      {% spaceless %}
	        <div class="col-md-3">
	      {% endspaceless %}
	    {% endif %}
	
	            <a href="/library/artist/{{item.id}}"><span style="color:#777;">{{item.article}}</span>{{item.title}}
				<span style="font-size: 0.7em; color:#888;">(<strong style="color:#777;">{{ item.trackCount }}</strong>)</span>
				</a><br />
	
	    {% if loop.last or loop.index % itemsPerColumn == 0 -%}
	      {% spaceless %}
	        </div>
	      {% endspaceless %}
	    {% endif %}
	
	  {% endfor %}


	{% include 'modules/paginator.twig' with { 'paginator': paginator_params, 'll': ll } %}
	{% endif %}
</div>



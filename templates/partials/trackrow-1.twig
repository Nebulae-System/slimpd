<div class="row track-row {{ cycle(['bg-col3','bg-col3'],loop.index) }} mouseover" id="track{{ loop.index }}">
	<div class="col-md-2 no-side-padding">
		<div class="row">
			<div class="col-md-4">
				<div style="position: absolute; width: 50px; height: 50px; z-index:1;" class="track-id-{{ item.id }}"> </div>
				<a href="/library/album/{{ item.albumId }}">
					<img src="/image-100/album/{{ item.albumId }}" alt="" style="width: 50px; height: 50px; z-index:2;">
				</a>
			</div>
			<div class="col-md-4 no-side-padding">
				<a style="z-index:2;" href="/mpdctrl/addSelect/{{ item.id }}" title="play" class="ajax-link is-playlink centered-icon" data-localplayer='{"action":"play","item":{{ item.id }},"ext":"{{item.audioDataformat }}"}'>
					<i class="fa fa-play fa-lg"></i>
				</a>
			</div>
			<div class="col-md-4 no-side-padding">
				<a class="trigger-modal centered-icon" href="/markup/widget-trackcontrol?item={{ item.id }}">
					<i class="fa fa-align-justify fa-lg"></i>
				</a>
				
			</div>
			
		</div>
	</div>
	
	<div class="col-md-3">
		{% include 'partials/tracktitle.twig' with { 'titlestring': item.title, 'filepath': item.relativePath  } %}
		<br />
		<div class="darker-links">{% include 'partials/albumlink.twig' with { 'item': renderitems.albums[item.albumId] } %}</div>
	</div>
	<div class="col-md-3">
		{% include 'partials/artist/link.twig' %}
	</div>
	<div class="col-md-2">
		{% include 'partials/genrelink.twig' with { 'genreIds': item.genreId, 'genres': renderitems.genres } %}
	</div>
	<div class="col-md-1">{% include 'partials/yearlink.twig' %}</div>
	<div class="col-md-1">{{ item.miliseconds|formatMiliseconds }}</div>
	
</div>
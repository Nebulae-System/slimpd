{% set albumHref = root~'album/'~item.albumUid %}
{% set playerCtrlItem = item.uid %}
{% set parentDir = '' %}
{% set fileName = '' %}
{% set waveformSvgUrl = [root,"audiosvg/width/550/",item.relPath]|path2url %}
{% set waveformJsonUrl = [root,"audiojson/resolution/2500/",item.relPath]|path2url %}
{% set placeholderSvgUrl = fileroot~"core/skin/default/img/loading-waveform.svg" %}
{% set artworkUrl = root~"image-100/track/"~item.uid %}
	    	
{% if not item.uid %}
	{% set playerCtrlItem = item.relPath %}
	{% set artworkUrl = [root,"image-100/searchfor/",item.relPath]|path2url %}
	{% set dirs = item.relPath|split('/') %}
	{% set tmp = root~"filebrowser" %}
	
	{% for i,dir in dirs %}
		{% set tmp = tmp~'/'~dir %}
		{% if i == loop.length-2 %}
			{% set albumHref = tmp|path2url %}
			{% set parentDir = dir %} 
		{% endif %}
		{% if loop.last %}
			{% set fileName = dir %}
		{% endif %}
	{% endfor%}
{% endif %}
{% if not item.relPath %}
	{% set waveformSvgUrl = fileroot~"core/skin/default/img/notrack.svg" %}
	{% set placeholderSvgUrl = fileroot~"core/skin/default/img/notrack.svg" %}
{% endif %}
{% block content %}
{% endblock %}
